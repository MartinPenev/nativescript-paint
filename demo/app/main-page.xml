<Page xmlns="http://schemas.nativescript.org/tns.xsd" 
    xmlns:PaintPad="nativescript-paint" loaded="pageLoaded">
    <ActionBar title="NativeScript-Paint" color="#fff" backgroundColor="#3489db" />
    <ScrollView>
        <StackLayout>
            <PaintPad:PaintPad backgroundColor="#222" id="paintPad" margin="10" height="280" drawColor="{{ drawColor }}" drawWidth="{{ drawWidth }}" />
            <Image src="{{ drawingImage }}" height="80" visibility="{{ drawingImage ? 'visible' : 'collapsed' }}" stretch="aspectFit" />

            <StackLayout orientation="horizontal">
                <Button text="Get Image" tap="{{ getMyDrawing }}" />
            </StackLayout>
            <StackLayout orientation="horizontal">
                <Button text="Clear" tap="{{ clearMyDrawing }}" />
            </StackLayout>
            <GridLayout padding="10" rows="*, *" columns="*, *">
                <Label text="Drawing Width:" class="message" textWrap="true" row="0" col="0" />
                <Label text="{{ drawWidth }}" class="message" textWrap="true" row="0" col="1" />
            </GridLayout>
            <Slider margin="10" backgroundColor="#ff4801" id="widthSlider" value="{{ drawWidth }}" maxValue="20" minValue="1" />
        </StackLayout>
    </ScrollView>
</Page>